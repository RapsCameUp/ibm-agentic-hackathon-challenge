{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts", "app.module.ts", "main.ts"],
  "exclude": ["node_modules", "dist"]
}
